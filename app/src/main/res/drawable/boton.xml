<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">

        <shape>
            <solid android:color="#4CA1AF" />
            <corners android:radius="@dimen/radioBoton"/>
        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#203A43" />
            <corners android:radius="@dimen/radioBoton"/>
        </shape>

    </item>


    <item>
        <shape>
            <gradient android:angle="180" android:endColor="#203A43" android:startColor="#4CA1AF" />
            <corners android:radius="@dimen/radioBoton"/>
        </shape>

    </item>

</selector>